 <script>
        function ValidateText_Encrypt() {
            eplaintext= document.forms["a5encrypt"]["encrypttext"];
            
             str = "";
             reg_plaintext = /^[\w ]+$/;
             
             if (!reg_plaintext.test(eplaintext.value) {
                 window.alert("Invalid value. Only alphabets, digits and spaces allowed");
                 return false;
             }
                 
            return true;
        }
         function ValidateText_Derypt() {
            dplaintext= document.forms["a5decrypt"]["decrypttext"];
            
             str = "";
             reg_plaintext = /^[\w ]+$/;
             
             if (!reg_plaintext.test(dplaintext.value) {
                 window.alert("Invalid value. Only alphabets, digits and spaces allowed");
                 return false;
             }
                 
            return true;
        }
        </script>

